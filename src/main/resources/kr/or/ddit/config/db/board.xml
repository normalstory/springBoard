<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<!-- 왼쪽 NAV : 게시판목록 -->
	<select id="panListManu" resultType="boardVo">
		select * from springboard where boarddel='y' order by boardnum
	</select>

	<!-- 게시판 관리page : 게시판목록 -->
	<select id="selectUser" resultType="boardVo">
		select * from springboard order by boarddel desc, boardnum asc
	</select>

	<!-- 게시판 관리page : 게시판추가 -->
	<insert id="addBoard" parameterType="boardVo">
		insert into springboard
			(boardid,boardname,boarddel,boardbirth,userid)
		values 
			('spring'||boardid.nextval, #{boardname}, #{boarddel}, SYSDATE, #{userid})
	</insert>
	
</mapper>